.world
  &__wrapper-title
    display flex
    align-items flex-end
    justify-content space-between
  &__list
    margin-top 70rem
    margin-bottom 70rem
    display flex
    flex-wrap wrap

  &__item
    width 100%
    height 800rem
    overflow hidden
    margin-bottom 50rem
    @media $mobile
      height 300rem
      margin-bottom 25rem
    &-wrapper
      height 100%
      width 100%
      background-size cover
      background-repeat repeat
      background-position center
      cursor default
    &-text
      transform translateY(0)
      font-size 40rem
      padding 20rem 10rem
      @media $mobile
        font-size 30rem
        padding 10rem 8rem
