.exhibitions
  margin-bottom 70rem

  &__title
    &-wrapper
      display flex
      align-items flex-end
      justify-content space-between

  &__category
    margin 104rem 0 74rem
    display flex
    @media $mobile
      margin 50rem 0
      justify-content center

    &-item
      cursor pointer
      font-size 50rem
      line-height 70rem
      color rgba($gray, .3)
      transition color .4s ease
      border-bottom none
      @media $mobile
        font-size 30rem
        line-height 50rem


      &:disabled
        color $gray
        border-bottom 1px solid $gray

      &:first-child
        margin-right 20rem

  &__item
    display flex
    align-items center
    margin-bottom 20rem
    postion relative

    &-separator
      font-size 20rem
      padding 0 10rem
      color $primary
      @media $mobile
        font-size 15rem

    &-year
      font-size 20rem
      font-weight 600
      line-height 21rem
      color $primary
      @media $mobile
        font-size 15rem

    &-text
      font-size 20rem
      line-height 30rem
      color $gray
      @media $mobile
        font-size 15rem
        line-height 25rem

    &-delete
      padding-right 10rem
      font-size 20rem
      color red

  &__loading
    font-size 30rem
    @media $mobile
      font-size 20rem

  &__button
    margin-top 30rem
    font-size 20rem
    padding-bottom 5rem
    border-bottom 1px solid $primary
    color $primary
    @media $mobile
      font-size 10rem
