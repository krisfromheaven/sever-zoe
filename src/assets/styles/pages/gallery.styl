.gallery
  padding-bottom 125rem
  overflow hidden

  &__up
    height 35rem
    width 35rem
    position fixed
    bottom 80rem
    right 25rem
    z-index 1
    background url("./assets/img/arrow.png") center / contain no-repeat
    transform rotate(-90deg)
    filter invert(1) brightness(50%)
    opacity 0
    visibility hidden

  &__title-wrapper
    display flex
    align-items flex-end
    justify-content space-between

  &__empty
    margin-top 120rem
    font-size 30rem
    text-align center
    @media $mobile
      font-size 20rem
      margin-top 60rem

  &__span
    margin-top 50rem
    text-align center
    font-size 50rem
    color $primary
    display block
    text-transform uppercase

  &__add
    padding-bottom 5rem
    font-family $ep
    font-size 17rem
    font-weight 600
    color $primary
    border-bottom 1px solid $primary
    @media $mobile
      font-size 10rem

  &__loader
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)

  &__list
    margin-top 120rem
    display flex
    flex-wrap wrap

  &__item
    overflow hidden
    width calc(100% / 4)
    opacity 0
    transition opacity .4s ease

    &[visible]
      opacity 1

    &:nth-child(-n + 12)
      opacity 1
    @media $mobile
      width 100%

    &-wrapper
      height 350rem
      margin 2rem
      cursor pointer
      position relative
      display flex
      align-items center
      justify-content center
      background-position center
      background-size cover
      background-repeat no-repeat
      transition background-position 1s ease

      @media $mobile
        height 250rem

      &:hover
        transition background-position 15s ease
        background-position 80% 80%

      &:hover .gallery__item-text
        transform translateY(0)
        opacity 1

      &:hover .gallery__item-delete
        opacity 1

    &-delete
      height 50rem
      width 50rem
      background-color rgba($primary, 0.8)
      position absolute
      top 0
      right 0
      z-index 2
      color $second
      font-size 30rem
      opacity 0
      transition opacity 1s ease

      &.edit
        top 55rem

        & > svg
          height 19rem
          width 19rem


    &-text
      position absolute
      bottom 0
      left 0
      right 0
      color $primary
      display flex
      align-items center
      justify-content flex-start
      font-size 22rem
      line-height 28rem
      font-weight 700
      padding 10rem
      transform translateY(100%)
      opacity 0
      transition transform 1s ease, opacity 1s ease
      background rgba(248, 248, 248, 0.75)
      backdrop-filter blur(3rem)
      @media $mobile
        font-size 19rem
        line-height 24rem



