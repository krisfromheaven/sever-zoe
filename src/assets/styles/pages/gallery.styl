.gallery
  padding-bottom 125rem

  &__title-wrapper
    display flex
    align-items flex-end
    justify-content space-between

  &__span
    margin-top 50rem
    text-align center
    font-size 50rem
    color $primary
    display block
    text-transform uppercase

  &__add
    padding-bottom 5rem
    font-family $ep
    font-size 17rem
    font-weight 600
    color $primary
    border-bottom 1px solid $primary

  &__loader
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)

  &__list
    margin-top 120rem
    display flex
    flex-wrap wrap
    background $second


  &__item
    border 1px solid $gray
    opacity 0
    transition opacity .3s ease
    width calc(100% / 4)
    @media $mobile
      width 100%

    &-wrapper
      margin 2rem
      border 1px solid $second
      cursor pointer
      height 350rem
      position relative
      overflow hidden
      display flex
      align-items center
      justify-content center

      & > img
        width 100%
        transform scale(2)
        transition transform 1s ease


      @media $mobile
        height 250rem

      &:hover > img
        transition transform 15s ease
        transform scale(1)

      &:hover .gallery__item-text
        transform translateY(0)

    &-delete
      height 50rem
      width 50rem
      background-color rgba($primary, 0.8)
      position absolute
      top 0
      right 0
      z-index 2
      color $second
      font-size 30rem

      &.edit
        top 55rem
        & > svg
          height 19rem
          width 19rem



    &-text
      position absolute
      bottom 0
      left 0
      right 0
      background-color rgba($primary, 0.8)
      color $second
      display flex
      align-items center
      justify-content flex-start
      font-size 22rem
      line-height 28rem
      font-weight 700
      padding 10rem
      transform translateY(100%)
      transition transform 1s ease
      @media $mobile
        font-size 19rem
        line-height 24rem

.gallery__item[visible]
  opacity 1

.gallery__item:nth-child(-n+8)
  opacity 1
