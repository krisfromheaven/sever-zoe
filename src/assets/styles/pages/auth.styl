.auth
  height 100%
  &[v-cloak]
  display none

  &__form
    border 1rem solid $gray
    margin 90rem 0 40rem
    @media $mobile
      margin-top 45rem

  &__suptitle
    margin 80rem 0
    font-size 80rem
    line-height 109rem
    color $gray
    text-align center
    @media $mobile
      font-size 30rem
      line-height 50rem

.form
  width 700rem
  padding 60rem 30rem
  @media $mobile
    width 100%
    padding 30rem 10rem

  &__control
    width 100%
    display flex
    flex-direction column
    margin-bottom 40rem
    border-bottom 1rem solid $gray

  &__label
    font-family $ep
    font-size 20rem
    font-weight 500
    line-height 27rem
    color $primary


  &__input
    font-size 19rem
    line-height 29rem
    color $primary
    padding 9rem 20rem

  &__error
    text-transform uppercase
    text-align right
    display block
    margin-top 6rem
    font-size 18rem
    line-height 27rem
    color red
    transition opacity .5s ease
    opacity 0

    &.error
      opacity 1

  &__btn
    width 100%
    padding 9rem 18rem
    border 1rem solid $primary
    margin-top 53rem
    font-size 20rem
    line-height 20rem
    font-family $ep
    font-weight 600
    color $primary
    background-color transparent
    transition all .5s ease
    cursor pointer
    @media $mobile
      margin-top 30rem

    &:hover
      background-color $gray
      color $second
      border-color $second
    &:disabled
      opacity 0.3
    &:disabled:hover
      color $primary
      background-color transparent
      border-color $primary

