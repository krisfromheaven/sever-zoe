.gallery__slider
  height 100vh
  width 100%
  position fixed
  z-index 10
  top 0
  left 0
  right 0
  background #000
  color #fff
  display flex
  align-items center
  justify-content center
  overflow auto

  &-wrapper
    height 80vh
    width 80vw
    background-color #fff
    overflow hidden
    @media $mobile
      height 100%
      width 100%

  &-content
    height 100%
    width 100%
    overflow auto
    display flex
    align-items center
    justify-content center

  &-image
    object-fit contain
    width 100%
    height 100%

    &.zoom
      object-fit none
      height auto
      width auto

  &-control
    position absolute
    top 0
    left 0
    right 0
    background-color rgba(#fff, 0.6)
    display flex
    align-items center
    justify-content center
    padding 20rem 0
    font-size 30rem
    color $primary
    @media $mobile
      font-size 10rem
      padding 16rem 20rem


  &-zoom
    text-transform uppercase
    font-size 20rem
    position absolute
    left 30rem
    color $primary
    z-index 1
    @media $mobile
      font-size 15rem
      padding-bottom 2rem
      left 255rem
      top 35rem
      border-bottom none

  &-text
    text-align center
    width 80%
    white-space nowrap
    text-overflow ellipsis
    overflow hidden
    @media $mobile
      width 100%
      padding-right 65rem
      white-space normal
      text-align left

  &-close
    font-size 25rem
    position absolute
    right 30rem

    @media $mobile
      font-size 18rem
      top 5rem
      right 5rem


  &-arrow
    position absolute
    top 50%
    z-index 1
    height 50rem
    width 50rem
    background url("./assets/img/arrow.png") center / contain no-repeat
    filter invert(1) brightness(50%)
    transform translateY(-50%)
    transition filter .4s ease
    @media $mobile
      filter invert(1) brightness(95%)

    &:hover
      filter invert(1) brightness(80%)

    &.next
      right 50rem
      @media $mobile
        right 20rem

    &.prev
      left 50rem
      transform rotate(180deg) translateY(50%)
      @media $mobile
        left 20rem
