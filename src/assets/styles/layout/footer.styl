.footer
  padding-bottom 78rem
  position relative

  & > .container
    display flex
    align-items center
    justify-content space-between
    @media $mobile
      flex-direction column

  &__social
    &-icon
      height 31rem
      width 31rem
      fill #8f8f8f
      transition fill .5s ease
      &:first-child
        margin-right 24rem
      &:hover
        fill $primary
  &__nav
    &-list
      display flex
      align-items center
    &-item
      & > a
        position relative
        margin-left 50rem
        font-size 17rem
        font-family $ep
        color $gray
        transition color .5s ease
        padding-bottom 2rem
        &:after
          content ''
          width 100%
          height 1rem
          background-color $gray
          position absolute
          bottom 0
          left 0
          opacity 0
          transition opacity .5s ease
        &:hover
          color $primary
        &:hover:after
          opacity 1
  &__copy
    font-family $ep
    color #A5A5A5
    font-weight: 500
    font-size 15rem
    @media $mobile
      padding 40rem 0
  &__logo
    height 33rem
    width 22rem
    position absolute
    right 30rem
    bottom 30rem
